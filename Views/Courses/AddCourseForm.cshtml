@model moment2_mvc.Models.MergeCourseClasses

<!--Using method = post for posting back to CoursesController-->
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CourseDetails.Id" class="control-label"></label>
        <input asp-for="CourseDetails.Id" class="form-control" />
        <span asp-validation-for="CourseDetails.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseDetails.Code" class="control-label"></label>
        <input asp-for="CourseDetails.Code" class="form-control" />
        <span asp-validation-for="CourseDetails.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseDetails.Name" class="control-label"></label>
        <input asp-for="CourseDetails.Name" class="form-control" />
        <span asp-validation-for="CourseDetails.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseDetails.Url" class="control-label"></label>
        <input asp-for="CourseDetails.Url" class="form-control" />
        <span asp-validation-for="CourseDetails.Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseDetails.Progression" class="control-label"></label>
        <input asp-for="CourseDetails.Progression" class="form-control" />
        <span asp-validation-for="CourseDetails.Progression" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

